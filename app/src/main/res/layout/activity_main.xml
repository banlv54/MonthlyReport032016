<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.itachi.facebook.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Facebook shared demo"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/title1"
        android:textColor="#0022fe" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title1"
        android:id="@+id/textView"
        android:layout_below="@+id/title1"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0101" />

    <ImageView
        android:layout_width="300px"
        android:layout_height="300px"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:background="@drawable/framgia"
        android:layout_alignEnd="@+id/title1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/link_shared"
        android:layout_below="@+id/imageView"
        android:textColor="#f40202"
        android:textColorLink="#ffffff"
        android:hint="@string/link_shared"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/imageView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        android:layout_below="@+id/link_shared"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Ná»™i dung" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shared_button"
        android:text="@string/button_shared"
        android:layout_below="@+id/content"
        android:layout_alignStart="@+id/textView" />
</RelativeLayout>
